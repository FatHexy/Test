        <!-- SCRIPT UNTUK FUNGSI TAB -->
        <script>
            function openTab(evt, tabName) {
                var i, tabcontent, tablinks;
                tabcontent = document.getElementsByClassName("tab-content");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                }

                tablinks = document.getElementsByClassName("tab-button");
                for (i = 0; i < tablinks.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" active", "");
                    tablinks[i].style.color = "#6b7280";
                    tablinks[i].style.borderBottom = "3px solid transparent";
                }

                document.getElementById(tabName).style.display = "block";
                
                evt.currentTarget.className += " active";
                evt.currentTarget.style.color = "#1e3a8a";
                evt.currentTarget.style.borderBottom = "3px solid #1e3a8a";
            }
        </script>

        <!-- Tambahkan sedikit style untuk animasi fade -->
        <style>
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(5px); }
                to { opacity: 1; transform: translateY(0); }
            }
            .tab-button:hover {
                background-color: #f3f4f6 !important;
            }
        </style>

    </div>
